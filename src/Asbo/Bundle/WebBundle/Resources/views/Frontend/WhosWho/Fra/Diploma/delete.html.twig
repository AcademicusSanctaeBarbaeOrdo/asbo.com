{% extends "AsboWebBundle:Frontend/WhosWho:layout.html.twig" %}

{% block title %}{{ block('headline') }} | {{ diploma.fra }} | {{ parent() }} {% endblock %}

{% block headline 'Supprimer un diplôme' %}

    {% block page_header %}

        <ul class="pager">
            <li class="previous">
                <a href="{{ path('asbo_whoswho_fra_show', {'slug': diploma.fra.slug}) }}">&larr; Retourner au profil de {{ diploma.fra }}</a>
            </li>
        </ul>

        {{ parent() }}

    {% endblock %}

    {% block asbo_whoswho_content %}

        {% if form.vars.errors is not empty %}
            <div class="alert alert-danger">
                {{ form_errors(form) }}
            </div>
        {% endif %}

        <div class="row">

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                    <div class="well">
                        Êtes-vous sûr de vouloir supprimer ce diplôme ?
                        <div class="text-center"><br /><strong>{{ diploma }}</strong> ? <br /></div>
                        Cette action est irréversible !
                    </div>
            </div>

            <div class="col-lg-12 col-md-12 col-sm-12 col-xs-12">
                {{ form_start(form, {'action': path('asbo_whoswho_diploma_delete', {'slug': diploma.fra.slug, 'id': diploma.id}), 'method': 'POST'}) }}
                <input type="hidden" name="_method" value="DELETE" />
                {{ form_row(form.submit, {'attr': {'class': 'btn btn-danger col-lg-12 col-md-12 col-sm-12 col-xs-12'}, 'label': 'Confirmer la suppression'}) }}
                {{ form_rest(form) }}
            </div>

        </div>

    {% endblock %}
