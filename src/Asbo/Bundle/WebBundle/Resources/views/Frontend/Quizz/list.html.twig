{% if quizzes is not empty %}
<div class="col-lg-12">
    <div class="panel panel-default">
        <div class="panel-heading">
            <strong>Interrogations</strong>
        </div>

        <div class="panel-body">
            <div class="row">
                {% set total = 0 %}
                {% set weighting = 0 %}
                {% for quizz in quizzes %}
                    <div class="col-lg-12">
                        {{ quizz.quizzanno.quizz }}: {{ quizz.points }}/{{ quizz.quizzanno.weighting }}
                        {% set total = total + quizz.points %}
                        {% set weighting = weighting + quizz.quizzanno.weighting %}
                    </div>
                {% endfor %}
                <hr />
                <div class="col-lg-12">
                    {% set average = total/weighting*20 %}
                    Moyenne: <strong>{{ average }}/20</strong>
                </div>
            </div>

        </div>
    </div>
</div>
{% endif %}
