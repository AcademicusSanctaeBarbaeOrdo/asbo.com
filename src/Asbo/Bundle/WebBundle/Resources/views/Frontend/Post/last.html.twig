{% if post is not empty %}
<div class="panel panel-default">
    <div class="panel-heading">
        <i class="fa fa-paperclip"></i> Derni√®re News :
        <a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}">{{ post.title }}</a>
        <span class="pull-right"><i class="fa fa-calendar"></i> {{ post.publicationDateStart | format_date }}</span>
    </div>
    <div class="panel-body">
        <article class="sonata-blog-post-container">

            <div class="sonata-blog-post-abstract">
                {{ post.abstract|raw }}
            </div>


        </article>
     </div>
    <div class="panel-footer">
        <span class="pull-right">
            <a href="{{ url('sonata_news_view', { 'permalink': sonata_news_permalink(post) }) }}">Lire la suite...</a>
        </span>
        <div class="sonata-blog-post-tag-title">
            {% if post.tags|length > 1 %}
                <i class="fa fa-tags"></i>
            {% else %}
                <i class="fa fa-tag"></i>
            {% endif %}
            {{ 'published_under'|transchoice(post.tags|length, {}, 'SonataNewsBundle') }}
        </div>
        <div class="sonata-blog-post-tag-list">
            {% for tag in post.tags %}
                <a href="{{ url('sonata_news_tag', { 'tag': tag.slug } ) }}">{{ tag.name }}</a>
            {% endfor %}
        </div>
    </div>
</div>
{% endif %}
