<doctrine-mapping xmlns="http://doctrine-project.org/schemas/orm/doctrine-mapping"
                  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
                  xsi:schemaLocation="http://doctrine-project.org/schemas/orm/doctrine-mapping
                                      http://doctrine-project.org/schemas/orm/doctrine-mapping.xsd">

    <entity name="Asbo\Bundle\CoreBundle\Entity\ThreadMetadata" table="message__thread_metadata">
        <id name="id" type="integer">
            <generator strategy="AUTO" />
        </id>
        <many-to-one target-entity="Asbo\Bundle\CoreBundle\Entity\Thread" field="thread" inversed-by="metadata">
        </many-to-one>

        <many-to-one target-entity="Asbo\Bundle\CoreBundle\Entity\User" field="participant">
        </many-to-one>
    </entity>

</doctrine-mapping>
