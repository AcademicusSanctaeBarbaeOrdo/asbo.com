{% extends 'AsboWebBundle:Frontend:layout.html.twig' %}

{% block header %}
    <nav>
        <ul class="navigation">
            <li class="orange current first">
                <a href="/" title="Accueil"><h2>Accueil</h2>

                    <p><i class="fa fa-home"></i></p></a>
            </li>

            <li class="blue"><a href="/ordre" title="L&#039;Ordre"><h2>L&#039;Ordre</h2>

                    <p><i class="fa fa-book"></i></p></a>
            </li>

            <li class="purple"><a href="/event/" title="Les éphémérides"><h2>Les éphémérides</h2>

                    <p><i class="fa fa-calendar"></i></p></a>
            </li>

            <li class="yellow"><a href="/comite/" title="Le comité"><h2>Le comité</h2>

                    <p><i class="fa fa-group"></i></p></a>
            </li>

            <li class="green"><a href="/contact" title="Contact"><h2>Contact</h2>

                    <p><i class="fa fa-envelope"></i></p></a>
            </li>

            <li class="last"><a href="/login" title="Se connecter"><h2>Se connecter</h2>

                    <p><i class="fa fa-lock"></i></p></a>
            </li>


        </ul>

    </nav>
{% endblock %}

{% block content %}

    <div class="col-lg-10 col-md-10 col-lg-offset-1 col-md-offset-1">

        {% block flashes %}
            {% for name, flashes in app.session.flashbag.all if name in ['info', 'warning', 'success', 'error',
            'fos_user_success'] %}
                {% for flash in flashes %}
                    <div class="alert alert-{{ name == 'fos_user_success' ? 'success' : name }}">
                        <a class="close" data-dismiss="alert" href="#">&times;</a>
                        {{ flash|trans }}
                    </div>
                {% endfor %}
            {% endfor %}
        {% endblock %}

        {% block page_header %}
            <div class="page-header">
                <h1>Oups... Il y a une erreur...</h1>
            </div>
        {% endblock page_header %}


        <div class="row">
            <div class="col-lg-12">
                <p>
                    Une erreur s'est produite lors de votre dernière manipulation... Si cette dernière
                    persiste, contactez au plus vite le webmaster du site ! <br/>
                    Nous nous excusons pour le désagrément.
                </p>
            </div>
        </div>
    </div>
{% endblock content %}